<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/SettingRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/iv_back"
            style="@style/SettingBackBtn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/camera_setting"
            android:textSize="20dp"
            android:textColor="@color/gray" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@drawable/divider"
        android:fadingEdge="vertical"
        android:orientation="vertical">

        <LinearLayout
            style="@style/SettingRoot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="50dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/lightGray3"
                android:gravity="center_vertical"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:text="@string/camera"
                android:textSize="16dp"
                android:textColor="@color/lightBlue3" />


            <LinearLayout
                android:id="@+id/ll_camera_mode"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:gravity="center"
                    android:text="@string/camera_mode"
                    android:textSize="16dp"
                    android:textColor="@color/gray" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="end|center_vertical">

                    <TextView
                        android:id="@+id/tv_camera_mode"
                        style="@style/SettingValue"
                        android:text="暂不调试" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_photo_resolve"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:gravity="center"
                    android:text="@string/photo_resolve"
                    android:textSize="16dp"
                    android:textColor="@color/gray" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="end|center_vertical">

                    <TextView
                        android:id="@+id/tv_photo_resolve"
                        style="@style/SettingValue"
                        android:text="名称" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_photo_format"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:gravity="center"
                    android:text="@string/photo_format"
                    android:textSize="16dp"
                    android:textColor="@color/gray" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="end|center_vertical">

                    <TextView
                        android:id="@+id/tv_photo_format"
                        style="@style/SettingValue"
                        android:text="名称" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_white_balance"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:gravity="center"
                    android:text="@string/white_balance"
                    android:textSize="16dp"
                    android:textColor="@color/gray" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="end|center_vertical">

                    <TextView
                        android:id="@+id/tv_white_balance"
                        style="@style/SettingValue"
                        android:text="名称" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_style"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:text="@string/style"
                    android:textColor="@color/gray" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="end|center_vertical">

                    <TextView
                        android:id="@+id/tv_style"
                        style="@style/SettingValue"
                        android:text="暂不调试" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_color"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:gravity="center"
                    android:text="@string/color"
                    android:textSize="16dp"
                    android:textColor="@color/gray" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="end|center_vertical">

                    <TextView
                        android:id="@+id/tv_color"
                        style="@style/SettingValue"
                        android:text="暂不调试" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/lightGray3"
                android:gravity="center_vertical"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:text="@string/video2"
                android:textSize="16dp"
                android:textColor="@color/lightBlue3" />


            <LinearLayout
                android:id="@+id/ll_video_resolve"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:gravity="center"
                    android:text="@string/video_resolve"
                    android:textSize="16dp"
                    android:textColor="@color/gray" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="end|center_vertical">

                    <TextView
                        android:id="@+id/tv_video_resolve"
                        style="@style/SettingValue"
                        android:text="名称" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_frame_rate"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:gravity="center"
                    android:text="@string/frame_rate"
                    android:textSize="16dp"
                    android:textColor="@color/gray" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="end|center_vertical">

                    <TextView
                        android:id="@+id/tv_frame_rate"
                        style="@style/SettingValue"
                        android:text="名称" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_video_format"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:gravity="center"
                    android:text="@string/video_format"
                    android:textSize="16dp"
                    android:textColor="@color/gray" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="end|center_vertical">

                    <TextView
                        android:id="@+id/tv_video_format"
                        style="@style/SettingValue"
                        android:text="名称" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_video_select"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:gravity="center"
                    android:text="@string/video_select"
                    android:textSize="16dp"
                    android:textColor="@color/gray" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="end|center_vertical">

                    <TextView
                        android:id="@+id/tv_video_select"
                        style="@style/SettingValue"
                        android:text="名称" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>