<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:skin="http://schemas.android.com/android/skin"
    style="@style/SettingRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_root"
    android:divider="@drawable/divider"
    skin:enable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/iv_back"
            style="@style/SettingBackBtn"
            android:src="@drawable/left_arrow"
            skin:enable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/battery_setting"
            android:textColor="@color/gray"
            android:textSize="20dp"
            skin:enable="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginBottom="10dp"
                android:text="@string/current_power"
                android:textSize="16dp"
                android:textColor="@color/commonText2"
                skin:enable="true" />

            <TextView
                android:id="@+id/tv_battery_energy"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:text="0mAH"
                android:textColor="@color/lightBlue3"
                android:textSize="20dp"
                skin:enable="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginBottom="10dp"
                android:text="@string/current_temperature"
                android:textColor="@color/commonText2"
                android:textSize="16dp"
                skin:enable="true" />

            <TextView
                android:id="@+id/tv_battery_temperature"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:text="0c"
                android:textColor="@color/lightBlue3"
                android:textSize="20dp"
                skin:enable="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginBottom="10dp"
                android:text="@string/flight_time"
                android:textSize="16dp"
                android:textColor="@color/commonText2"
                skin:enable="true" />

            <TextView
                android:id="@+id/tv_flight_time"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:text="00:00"
                android:textColor="@color/lightBlue3"
                android:textSize="20dp"
                skin:enable="true" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:background="@drawable/divider2"
        skin:enable="true" />

