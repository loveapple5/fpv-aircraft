<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fpv="http://schemas.android.com/apk/res-auto"
    xmlns:skin="http://schemas.android.com/android/skin"
    style="@style/SettingRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_root"
    android:divider="@drawable/divider"
    skin:enable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/iv_back"
            style="@style/SettingBackBtn"
            android:src="@drawable/left_arrow"
            skin:enable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/fc_param_setting"
            android:textColor="@color/gray"
            skin:enable="true" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@drawable/divider"
        android:fadingEdge="vertical"
        android:orientation="vertical">

        <LinearLayout
            style="@style/SettingRoot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_root"
            android:divider="@drawable/divider"
            android:paddingBottom="50dp"
            skin:enable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:gravity="center"
                    android:text="@string/home_set"
                    android:textColor="@color/commonText"
                    skin:enable="true" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="end|center_vertical">

                    <TextView
                        android:id="@+id/tv_go_home"
                        style="@style/SettingValue"
                        android:background="@drawable/bg_setting_value"
                        android:text="@string/refresh"
                        android:textColor="@color/lightGray2"
                        skin:enable="true" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:gravity="center"
                        android:text="@string/home_height"
                        android:textColor="@color/commonText"
                        skin:enable="true" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="end|center_vertical">

                        <EditText
                            android:id="@+id/et_go_home_height"
                            style="@style/SettingValue"
                            android:background="@drawable/bg_setting_value"
                            android:text="500"
                            android:textColor="@color/lightGray2"
                            skin:enable="true" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginStart="20dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/home_hint"
                    skin:enable="true" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_flight_limit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="@string/flight_limit"
                    android:textColor="@color/commonText"
                    skin:enable="true" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="end|center_vertical">

                    <ImageView
                        style="@style/SettingArrow"
                        android:src="@drawable/right_arrow"
                        skin:enable="true" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:gravity="center"
                        android:text="@string/allow_change_flight_mode"
                        android:textColor="@color/commonText"
                        skin:enable="true" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="end|center_vertical">

                        <com.synseaero.view.SwitchButton
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="20dp"
                            android:textColor="@color/lightGray2"
                            fpv:kswBackDrawable="@drawable/bg_switch"
                            fpv:kswThumbDrawable="@drawable/switch_thumb"
                            fpv:kswThumbHeight="20dp"
                            fpv:kswThumbMarginBottom="-7dp"
                            fpv:kswThumbMarginLeft="-2dp"
                            fpv:kswThumbMarginRight="-2dp"
                            fpv:kswThumbMarginTop="-7dp"
                            fpv:kswThumbWidth="20dp"
                            skin:enable="true" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="105dp"
                    android:layout_height="52dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginStart="20dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/flight_mode_hint"
                    skin:enable="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:gravity="center"
                    android:text="@string/failure_safety_behavior"
                    android:textColor="@color/commonText"
                    skin:enable="true" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="end|center_vertical">

                    <TextView
                        android:id="@+id/tv_fail_safe_operation"
                        style="@style/SettingValue"
                        android:background="@drawable/bg_setting_value"
                        android:text="@string/hover"
                        android:textColor="@color/lightGray2"
                        skin:enable="true" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:gravity="center"
                        android:text="@string/smart_go_home_energy"
                        android:textColor="@color/commonText"
                        skin:enable="true" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="end|center_vertical">

                        <TextView
                            android:id="@+id/tv_smart_go_home_energy"
                            style="@style/SettingValue"
                            android:background="@drawable/bg_setting_value"
                            android:text="30"
                            android:textColor="@color/lightGray2"
                            skin:enable="true" />
                    </LinearLayout>
                </LinearLayout>

                <SeekBar
                    android:id="@+id/sb_smart_go_home_energy"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginEnd="20dp"
                    android:max="50"
                    android:maxHeight="6dp"
                    android:progressDrawable="@drawable/bg_seekbar"
                    android:thumb="@drawable/thumb_seekbar"
                    android:thumbOffset="0dp"
                    skin:enable="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:gravity="center"
                        android:text="@string/smart_land_energy"
                        android:textColor="@color/commonText"
                        skin:enable="true" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="end|center_vertical">

                        <TextView
                            android:id="@+id/tv_smart_land_energy"
                            style="@style/SettingValue"
                            android:background="@drawable/bg_setting_value"
                            android:text="30"
                            android:textColor="@color/lightGray2"
                            skin:enable="true" />
                    </LinearLayout>
                </LinearLayout>

                <SeekBar
                    android:id="@+id/sb_smart_land_energy"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginEnd="20dp"
                    android:max="50"
                    android:maxHeight="6dp"
                    android:progressDrawable="@drawable/bg_seekbar"
                    android:thumb="@drawable/thumb_seekbar"
                    android:thumbOffset="0dp"
                    skin:enable="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:gravity="center"
                        android:text="@string/led_switch"
                        android:textColor="@color/commonText"
                        skin:enable="true" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="end|center_vertical">

                        <com.synseaero.view.SwitchButton
                            android:id="@+id/sb_led"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="20dp"
                            android:textColor="@color/lightGray2"
                            fpv:kswBackDrawable="@drawable/bg_switch"
                            fpv:kswThumbDrawable="@drawable/switch_thumb"
                            fpv:kswThumbHeight="20dp"
                            fpv:kswThumbMarginBottom="-7dp"
                            fpv:kswThumbMarginLeft="-2dp"
                            fpv:kswThumbMarginRight="-2dp"
                            fpv:kswThumbMarginTop="-7dp"
                            fpv:kswThumbWidth="20dp"
                            skin:enable="true" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="143dp"
                    android:layout_height="52dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginStart="20dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/led_switch"
                    skin:enable="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:gravity="center"
                    android:text="@string/open_vision_positioning"
                    android:textColor="@color/commonText"
                    skin:enable="true" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="end|center_vertical">

                    <com.synseaero.view.SwitchButton
                        android:id="@+id/sb_vision_location"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:textColor="@color/lightGray2"
                        fpv:kswBackDrawable="@drawable/bg_switch"
                        fpv:kswThumbDrawable="@drawable/switch_thumb"
                        fpv:kswThumbHeight="20dp"
                        fpv:kswThumbMarginBottom="-7dp"
                        fpv:kswThumbMarginLeft="-2dp"
                        fpv:kswThumbMarginRight="-2dp"
                        fpv:kswThumbMarginTop="-7dp"
                        fpv:kswThumbWidth="20dp"
                        skin:enable="true" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </ScrollView>
</LinearLayout>