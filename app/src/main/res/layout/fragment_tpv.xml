<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_tpv">
    <!--top-->
    <RelativeLayout
        android:id="@+id/layout_tpv_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:id="@+id/layout_craft_signal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:background="@drawable/bg_sat_signal">

            <ImageView
                android:id="@+id/iv_craft_signal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@drawable/signal_icon_4" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_safe_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_safe_info"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:text="接近禁飞区，请绕开此区域安全飞行" />

        <RelativeLayout
            android:id="@+id/layout_controller_signal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/bg_rem_signal">

            <ImageView
                android:id="@+id/iv_controller_signal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/signal_icon_4" />
        </RelativeLayout>
    </RelativeLayout>
    <!--left-->
    <RelativeLayout
        android:id="@+id/layout_tpv_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/iv_fpv_left_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bg_tpv_left"
            android:layout_alignParentEnd="true"
            android:scaleType="fitXY"/>

        <TextureView
            android:id="@+id/tv_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite" />
    </RelativeLayout>
    <!--bottom-->
    <RelativeLayout
        android:id="@+id/layout_tpv_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_tpv_bottom">

        <ImageView
            android:id="@+id/iv_helmet_energy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:scaleType="fitXY"
            android:src="@drawable/energy_icon_90" />

        <ImageView
            android:id="@+id/iv_phone_energy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/iv_helmet_energy"
            android:scaleType="fitXY"
            android:src="@drawable/energy_icon_50" />

        <ImageView
            android:id="@+id/iv_craft_energy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:scaleType="fitXY"
            android:src="@drawable/energy_icon_20" />

        <ImageView
            android:id="@+id/iv_controller_energy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/iv_craft_energy"
            android:scaleType="fitXY"
            android:src="@drawable/energy_icon_40" />

    </RelativeLayout>
    <!--right-->
    <RelativeLayout
        android:id="@+id/layout_tpv_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_tpv_right">

        <TextView
            android:id="@+id/tv_flight_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_flight_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50" />

        <TextView
            android:id="@+id/tv_flight_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20" />

        <ImageView
            android:id="@+id/iv_flight_vertical_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_up" />

        <TextView
            android:id="@+id/tv_flight_vertical_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7.5" />
    </RelativeLayout>
</RelativeLayout>