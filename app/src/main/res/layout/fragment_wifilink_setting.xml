<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/layout_WiFiSSID">
        <TextView
            android:text="WiFi SSID"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/tv_wifiSSID"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/et_wifiSSID"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/layout_WiFiPassword">
        <TextView
            android:text="WiFi 密码"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/tv_wifiPassword"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/et_wifiPassword"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <Button
        android:text="提交"
        android:layout_width="258dp"
        android:layout_height="70dp"
        android:id="@+id/btn_submit_wifi"
        android:layout_marginLeft="70dp"/>
</LinearLayout>