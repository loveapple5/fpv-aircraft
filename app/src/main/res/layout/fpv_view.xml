<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <TextureView
        android:id="@+id/video_previewer_surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleX="-1"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="390dp"
        android:layout_height="390dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:scaleX="-1"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/fpvui"
            android:contentDescription="@string/fpv" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/value0"
            android:textColor="@color/colorWhite"
            android:id="@+id/textView4"
            android:scaleX="-1"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/textgap"
            android:layout_marginTop="80dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/value0"
            android:textColor="@color/colorWhite"
            android:id="@+id/textView5"
            android:scaleX="-1"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/textgap"
            android:layout_marginBottom="60dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/value0"
            android:textColor="@color/colorWhite"
            android:id="@+id/textView6"
            android:scaleX="-1"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/textgap"
            android:layout_marginTop="80dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/value0"
            android:textColor="@color/colorWhite"
            android:id="@+id/textView7"
            android:scaleX="-1"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart= "true"
            android:layout_marginStart="@dimen/textgap"
            android:layout_marginBottom="60dp" />

        <ImageView
            android:layout_width="320dp"
            android:layout_height="320dp"
            android:gravity="center"
            android:id="@+id/imageView5"
            android:src="@mipmap/gyro"
            android:contentDescription="@string/gyro"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageView4"
            android:gravity="center"
            android:src="@drawable/cross2"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/cross"/>

    </RelativeLayout>


</RelativeLayout>
